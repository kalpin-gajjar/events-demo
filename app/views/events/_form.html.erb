<%= form_with(model: event, local: true, class: "m-5") do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field my-3">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="field my-3">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>
  <div class="field my-3">
    <%= form.label :start_date %>
    <%= form.datetime_field :start_date %>
  </div>
  <div class="field my-3">
    <%= form.label :end_date %>
    <%= form.datetime_field :end_date %>
  </div>
  <div class="field my-3">
    <%= form.label :members %>
    <%= form.text_field :members %>
  </div>
  <hr>
  <%= form.hidden_field :user_id, value: current_user.id %>
  <div class="actions my-3">
    <%= form.submit class:"bg-info text-white fw-bold rounded-pill border-0 p-2"%>
  </div>
<% end %>
