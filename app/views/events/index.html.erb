<div class="d-flex w-100 text-info justify-content-center align-items-center m-2">
  <h3 class="m-0">Events</h3>
</div>
<hr class="mx-2">
<div class="d-flex justify-content-end me-2">
  <%= button_to 'Add new event', new_event_path, method: :get, class: "nav-link text-info fw-bold rounded-pill border-0"  %>
</div>
<% if current_user.events.present? %>
  <% current_user.events.each do |event| %>
    <div class="row mt-2">
      <div class="col-lg-5 mx-lg-auto mt-5">
        <div class="card shadow border-0">
          <div class="card-header">
            <h5 class="text-center"><%= event.title %></h5>
          </div>
          <div class="card-body">
            <p><%= event.description %></p>
          </div>
          <div class="card-footer p-3">
            <%= link_to "Show", event_path(event), class: 'text-decoration-none bg-info text-white fw-bold border-0 rounded w-25 p-2' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
<% end %>
