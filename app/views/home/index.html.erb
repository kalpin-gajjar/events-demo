<div class="d-flex flex-column align-items-center">
  <div class="d-flex bg-info w-100 p-2 text-white justify-content-between align-items-center">
    <h3>Event Management</h3>
    <% if user_signed_in? %>
      <div>
        <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: "nav-link text-info fw-bold rounded-pill border-0"  %>
      </div>
    <% else %>
      <div class="d-flex">
        <%= link_to 'Sign in with Google', user_google_oauth2_omniauth_authorize_path, method: :post, class: "bg-white p-2 text-decoration-none text-info fw-bold rounded-pill border-0 mx-2"  %>
        <%= link_to 'Sign up', new_user_registration_path, class: "bg-white p-2 text-decoration-none text-info fw-bold rounded-pill border-0 mx-2" %>
      </div>
    <% end %>
  </div>
</div>
<div class="d-flex flex-column m-3">
  <% if user_signed_in? %>
    <h5>Welcome, <%= current_user.email %></h5>
    <hr>
    <div class="row mt-3 mb-3">
      <div class="col-lg-5 mx-lg-auto mt-5">
        <div class="card shadow border-0">
          <div class="card-body bg-light">
            <%= link_to "Events", events_path, class: 'btn btn-lg btn-info text-white d-block my-3 mx-5' %>
          </div>
        </div>
      </div>
      <div class="col-lg-5 mx-lg-auto mt-5">
        <div class="card shadow border-0">
          <div class="card-body bg-light">
            <%= link_to "New Event", new_event_path, class: 'btn btn-lg btn-info text-white d-block my-3 mx-5' %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  Sign in to continue!
<% end %>
